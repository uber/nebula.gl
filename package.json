{
  "description": "A suite of 3D-enabled data editing layers for deck.gl",
  "license": "MIT",
  "private": true,
  "author": "Georgios Karnas <georgios@uber.com>",
  "keywords": [
    "webgl",
    "visualization",
    "overlay",
    "layer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber/nebula.gl"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "start": "open http://nebula.gl/docs",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec npm run build",
    "pretty": "prettier --write \"{modules,examples,test}/**/*.js\" --loglevel warn",
    "lint": "npm run lint-yarn && eslint modules/**/src examples",
    "lint-yarn": "!(grep -q unpm.u yarn.lock) && echo 'Lockfile valid.' || (echo 'Please rebuild yarn file using public npmrc' && false)",
    "flow": "flow",
    "prepublish": "npm run build",
    "publish-prod": "npm run bootstrap && npm run build && npm run test && lerna publish --exact && ./scripts/changelog.sh",
    "test": "npm run lint && npm run build && npm run flow && npm run jest",
    "test-r": "npm run lint && npm run build && npm run test-node && (cd test/rendering-test && node node-rendering.js)",
    "test-fast": "npm run test-node",
    "test-ci": "npm run lint && npm run build && npm run flow && npm run jest-cover",
    "test-node": "node test/node.js",
    "test-dist": "node test/node-dist.js",
    "test-browser": "webpack-dev-server --env.test --progress --hot --open",
    "jest": "jest",
    "jest-cover": "jest --coverage",
    "bench": "node test/bench/node.js",
    "bench-browser": "webpack-dev-server --env.bench --progress --hot --open",
    "test-rendering": "(cd test/rendering-test && webpack-dev-server --config webpack.config.test-rendering.js --progress --hot --open)",
    "publish-docs": "./publish-docs.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@deck.gl/core": "^8.0.6",
    "@deck.gl/layers": "^8.0.6",
    "@deck.gl/mesh-layers": "^8.0.6",
    "@deck.gl/react": "^8.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-version-inline": "^1.0.0",
    "babel-polyfill": "^7.0.0-beta.3",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.3",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-uber-es2015": "^3.1.2",
    "eslint-config-uber-jsx": "^3.3.3",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.81.0",
    "jest": "^24.9.0",
    "jsdom": "^9.11.0",
    "lerna": "^3.10.7",
    "module-alias": "^2.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.13.7",
    "prettier-check": "^2.0.0",
    "probe.gl": "^0.0.3",
    "raw-loader": "^0.5.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-test-renderer": "^16.4.1",
    "regenerator-runtime": "^0.12.1",
    "reify": "0.4.4",
    "source-map-loader": "^0.2.4",
    "tap-browser-color": "^0.1.2",
    "tape": "4.8",
    "tape-catch": "^1.0.4",
    "transform-loader": "^0.2.3",
    "webpack": "^2.4.0",
    "webpack-dev-server": "^3.1.14"
  }
}
