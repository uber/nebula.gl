{
  "description": "A suite of 3D-enabled data editing layers for deck.gl",
  "license": "MIT",
  "private": true,
  "author": "Georgios Karnas <georgios@uber.com>",
  "keywords": [
    "webgl",
    "visualization",
    "overlay",
    "layer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber/nebula.gl"
  },
  "workspaces": [
    "modules/*",
    "examples/advanced"
  ],
  "scripts": {
    "start": "open http://nebula.gl/docs",
    "start-example": "lerna run start-local --scope=example-advance --stream",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "prettier": "prettier --write \"{modules,examples,test,dev-docs,docs,website}/**/*.{ts,tsx,js,md}\"",
    "prettier-diff": "prettier --list-different \"{modules,examples,test,dev-docs,docs,website,}/**/*.{ts,tsx,js,md}\"",
    "lint": "yarn run lint-yarn && eslint modules/**/src/**/* --ext ts,tsx,js",
    "lint-yarn": "!(grep -q unpm.u yarn.lock) && echo 'Lockfile valid.' || (echo 'Please rebuild yarn file using public npmrc' && false)",
    "types-check": "lerna run types-check --stream",
    "prepublish": "yarn run build",
    "publish-prod": "yarn run bootstrap && yarn run build && yarn run test && lerna publish --force-publish --exact && ./scripts/changelog.sh",
    "test": "yarn run lint && yarn run build && yarn run types-check && yarn run jest",
    "test-r": "yarn run lint && yarn run build && yarn run test-node && (cd test/rendering-test && node node-rendering.js)",
    "test-fast": "yarn run test-node",
    "test-ci": "yarn run lint && yarn run prettier-diff && yarn run build && yarn run types-check && yarn run jest-cover",
    "test-node": "node test/node.js",
    "test-dist": "node test/node-dist.js",
    "test-browser": "webpack-dev-server --env.test --progress --hot --open",
    "jest": "jest",
    "jest-cover": "jest --coverage",
    "bench": "node test/bench/node.js",
    "bench-browser": "webpack-dev-server --env.bench --progress --hot --open",
    "test-rendering": "(cd test/rendering-test && webpack-dev-server --config webpack.config.test-rendering.js --progress --hot --open)",
    "publish-docs": "./publish-docs.sh",
    "postinstall": "scripts/copyDeckglTypes.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-export-default-from": "7.8.3",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@babel/register": "7.9.0",
    "@deck.gl/core": "^8.0.6",
    "@deck.gl/geo-layers": "^8.2.8",
    "@deck.gl/layers": "^8.0.6",
    "@deck.gl/mesh-layers": "^8.0.6",
    "@deck.gl/react": "^8.0.6",
    "@types/geojson": "^7946.0.7",
    "@types/jest": "25.2.1",
    "@types/react": "16.9.32",
    "@types/react-dom": "16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "4.4.3",
    "@types/uuid": "7.0.2",
    "@types/viewport-mercator-project": "6.1.0",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.2.6",
    "babel-loader": "8.1.0",
    "babel-plugin-istanbul": "6.0.0",
    "babel-plugin-version-inline": "^1.0.0",
    "core-js": "3.6.4",
    "coveralls": "^3.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-uber-es2015": "3.1.2",
    "eslint-config-uber-jsx": "3.3.3",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "husky": "^4.2.5",
    "jest": "25.2.7",
    "jsdom": "^9.11.0",
    "lerna": "3.20.2",
    "module-alias": "^2.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "2.0.2",
    "prettier-check": "2.0.0",
    "pretty-quick": "^2.0.1",
    "probe.gl": "^0.0.3",
    "raw-loader": "^0.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "regenerator-runtime": "^0.12.1",
    "reify": "0.4.4",
    "source-map-loader": "^0.2.4",
    "tap-browser-color": "^0.1.2",
    "tape": "4.8",
    "tape-catch": "^1.0.4",
    "transform-loader": "^0.2.3",
    "ts-jest": "25.3.1",
    "ts-loader": "^7.0.0",
    "typescript": "3.8.3",
    "webpack": "^2.4.0",
    "webpack-dev-server": "^3.1.14"
  },
  "resolutions": {
    "indefinitely-typed": "1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
